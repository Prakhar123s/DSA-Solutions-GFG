/*
class Node {
    int data;
    Node next;

    Node(int x) {
        data = x;
        next = null;
    }
}
*/

class Solution {
    public boolean detectLoop(Node head) {
        // code here
              boolean isLoop=false;

         if(head==null || head.next==null)
    {
        return isLoop;
    }
      Node fastP=head;
      Node slowP=head;
      
      while(fastP!=null&&fastP.next!=null)
        {
            
            fastP=fastP.next.next;
            slowP=slowP.next;
            
            if(fastP==slowP){
                isLoop=true;
                 slowP=head;
                break;
            }
        }
        
        
        if(isLoop){
        
            if(slowP==fastP){
                while(fastP.next!=slowP){
                    fastP=fastP.next;
                }
            }
            else{
                while(slowP.next!=fastP.next){
                    slowP=slowP.next;
                    fastP=fastP.next;
                }
            }
        }
        return isLoop;
        
    }
}
