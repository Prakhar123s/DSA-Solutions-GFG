/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public TreeNode sortedArrayToBST(int[] nums) {
        
        if (nums.length == 0)
        {
            return null;
        }
        return sortedArrayToBST(0, nums.length-1, nums);       
        
    }
    private TreeNode sortedArrayToBST(int s,int e, int[] nums){

        if (s > e) {
            return null; 
        }

        int mid= (s+e)/2;

        TreeNode node=new TreeNode(nums[mid]);

        node.left=sortedArrayToBST(s,mid-1,nums);
        node.right=sortedArrayToBST(mid+1,e,nums);

        return node;
    }
}
